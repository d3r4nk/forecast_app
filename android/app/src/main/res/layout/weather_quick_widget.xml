<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@drawable/weather_widget_bg">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather now"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="6dp"
        android:includeFontPadding="false"/>

    <!-- MAIN TEMP -->
    <TextView
        android:id="@+id/tv_temp_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="—°"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"/>

    <!-- METRICS -->
    <TextView
        android:id="@+id/tv_metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hum —  •  Wind —"
        android:textSize="12sp"
        android:textColor="#EAF2FF"
        android:layout_marginBottom="6dp"
        android:includeFontPadding="false"/>

    <!-- DESC + ICON -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear sky"
            android:textSize="12sp"
            android:textColor="#D6E6FF"
            android:includeFontPadding="false"/>

        <ImageView
            android:id="@+id/iv_weather_desc"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:scaleType="fitCenter"
            android:contentDescription="weather condition icon"/>
    </LinearLayout>

</LinearLayout>
